<h1>Building Update Form</h1>
<%= form_for @building do |f| %>
<% if @building.errors.any? %>
<%= pluralize(@building.errors.full_messages, "Error") %>:
<ul>
    <% @building.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
<% end %>
</ul>

    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :country %>
    <%= f.text_field :country %><br>

    <%= f.label :address %>
    <%= f.text_field :address %><br>

    <%= f.label :rent_per_floor %>
    <%= f.number_field :rent_per_floor %><br>

    <%= f.label :number_of_floors %>
    <%= f.number_field :number_of_floors %><br>

<%= f.submit %>
<% end %>